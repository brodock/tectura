<h1><%= I18n.t('txt.login', :default => 'Login') %></h1>

<%= form_tag session_path do -%>
<div id="openid_fields" style="display:none">
<p>
  <label for="openid_url"><%= I18n.t "txt.views_users.login_with_openid", :default => "Login with OpenID" %></label>
  <br />
  <%= text_field_tag 'openid_url', params[:openid_url], :class => "openid_url" %>
</p>
<p><%= submit_tag I18n.t('txt.log_in', :default => 'Log in'), :class => "btn grayBtn" %>
<p>or login with <a href="#" onclick="LoginForm.setToPassword()">username/password</a></p>
</div>

<div id="password_fields">
<%= render :partial => "form"%>
	<p><%= submit_tag I18n.t('txt.log_in', :default => 'Log in'), :class => "btn grayBtn" %></p>
</div>
<p id="alternativeLogin">
<%= link_to_function(I18n.t('txt.views_users.reset_password', :default => "reset password"), "$('reset-password').toggle();") %>
<span>|</span> <a href="#" onclick="LoginForm.setToOpenID()"><%= I18n.t('txt.or_login_with_openid', :default => 'login with OpenID') %></a>
</p>


<% end -%>
<%= form_tag lost_password_path, :id => 'reset-password', :style => 'display:none' do -%>

  <hr />
  <h5><%= I18n.t 'txt.views_users.reset_password', :default => "Reset Password" %></h5>

  <p><%= I18n.t 'txt.views_users.email_directions' %></p>
  <p><%= text_field_tag :email, "", :size => 30 %></p>
  <p><%= submit_tag I18n.t("txt.views_users.send_email", :default => "E-mail me the link") %>
  | <%= link_to_function(I18n.t("txt.cancel", :default => "cancel"), "$('reset-password').hide()") %></p>

<% end -%>